---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Reddit+Mono:wght@200..900&display=swap");

  :root {
    --color-primario: #df5c0a;
    --color-secundario: #423c39;
    --color-terciario: #444f3b;
    --color-fondo: #d5d1cd;
  }

  html {
    font-family: "Input Sans", sans-serif;
    /* font-family: "Safiro", sans-serif; */
    /* font-family: "Reddit Mono", monospace; */
    font-optical-sizing: auto;
    background: var(--color-fondo);
    /* letter-spacing: 0.04rem; */
  }
  body,
  figure {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
    font-size: 0.8rem;
    color: var(--color-primario);
    cursor: pointer;
  }
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1 {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    color: var(--color-secundario);
  }
  h2,
  h3,
  h4 {
    font-family: "Reddit Mono", monospace;
    font-optical-sizing: auto;
    margin: 4px 0;
    color: var(--color-secundario);
  }
  article h4 {
    text-transform: uppercase;
    font-weight: 500;
    font-size: 0.8rem;
    margin: 4px 0;
    letter-spacing: 0.01rem;
    color: var(--color-primario);
  }

  p {
    color: var(--color-terciario);
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }

  .print {
    margin-top: 20px;
    display: none;
  }

  @media print {
    *,
    h1,
    h2,
    h3,
    h4,
    p,
    article,
    span {
      color: black;
      background: white;
    }
    .print {
      display: block;
    }
  }
</style>
