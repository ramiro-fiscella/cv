---
import Section from "../Section.astro";

import { work } from "@cv";
---

<Section title="Experiencia">
  <ul>
    {
      work.map(({ name, startDate, endDate, position, summary }) => {
        return (
          <>
            <li>
              <article>
                <header>
                  <div>
                    <h3>{name}</h3>
                    <h4>{position}</h4>
                  </div>
                  <p class="date">
                    {startDate} - {endDate ? endDate : "Presente"}
                  </p>
                </header>
                <footer>
                  <p>{summary}</p>
                </footer>
              </article>
            </li>
          </>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }
  article h3 {
    color: #444;
  }
  article h4 {
    color: #222;
    text-transform: uppercase;
    font-weight: 600;
    font-size: 0.8rem;
    margin: 4px 0;
  }
  .date {
    color: #888;
    text-transform: uppercase;
    font-weight: 400;
    font-size: 0.8rem;
    margin: 8px 0;
  }
  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }
</style>
